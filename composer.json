{
    "name": "wgs-service/moje-stranky",
    "description": "White Glove Service - Natuzzi Furniture Service Management System",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Radek Zikmund",
            "email": "radek@wgs-service.cz"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-gmp": "*",
        "minishlink/web-push": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "WGS\\": "app/"
        },
        "files": [
            "config/config.php",
            "includes/csrf_helper.php",
            "includes/api_response.php",
            "includes/db_metadata.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}

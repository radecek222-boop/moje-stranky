# Testing Environment Variables
# Tento soubor je používán při spouštění testů
# NEPOUŽÍVAT v produkci!

APP_ENV=testing
APP_DEBUG=true

# Database - SQLite in-memory pro testy
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# SMTP - Mock pro testy (neposílá skutečné emaily)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@example.com
SMTP_PASS=test_password
SMTP_FROM=noreply@test.wgs-service.cz
SMTP_FROM_NAME=WGS Test System

# Security - Testovací klíče (NIKDY nepoužívat v produkci!)
ADMIN_KEY_HASH=5e884898da28047151d0e56f8dc6292773603d0d6aabbdd62a11ef721d1542d8  # Hash z "test_admin_key"
ADMIN_HIGH_KEY_HASH=9f86d081884c7d659a2feaa0c55ad015a3bf4f1b2b0b822cd15d6c15b0f00a08  # Hash z "test_high_key"

# Geoapify - Testovací API klíč
GEOAPIFY_KEY=test_geoapify_key_12345

# Rate Limiting - Volnější pro testy
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=100
RATE_LIMIT_WINDOW_MINUTES=60

# Session
SESSION_LIFETIME=3600
SESSION_SECURE=false  # HTTP OK pro testy (ne HTTPS)

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/test_errors.log

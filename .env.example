# Database Configuration
DB_HOST=127.0.0.1
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_FROM=your_email@example.com
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# API Keys
DEEPL_API_KEY=optional_later
GEOAPIFY_KEY=your_geoapify_api_key

# AviationStack API (volitelne - pro sledovani letu)
# Ziskejte ZDARMA na: https://aviationstack.com/
# Free tier: 100 requestu/mesic
# Bez nastaveni funguje demo rezim s nahodnymi daty
AVIATIONSTACK_API_KEY=your_aviationstack_api_key

# Geoapify API (POVINNÉ pro mapy a našeptávač adres!)
# Získejte ZDARMA na: https://www.geoapify.com/
# Free tier: 3,000 requestů/den
# Návod: viz GEOAPIFY_SETUP.md
# Preferovaný název proměnné – odpovídá konfiguraci v config/config.php
GEOAPIFY_API_KEY=your_geoapify_api_key
# Volitelné: zpětná kompatibilita se staršími verzemi
#GEOAPIFY_KEY=

# ========================================
# SECURITY
# ========================================

# JWT Secret (generujte náhodný 64-char hex string)
# Příkaz: openssl rand -hex 32
JWT_SECRET=generate_random_64_char_hex_string
ADMIN_KEY_HASH=sha256_hash_of_your_admin_registration_key

# Environment
ENVIRONMENT=production

# ========================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ========================================
# Vygenerujte klice pomoci setup_web_push.php
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:info@wgs-service.cz

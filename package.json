{
  "name": "wgs-service-frontend",
  "version": "1.0.0",
  "description": "WGS Service - Frontend JavaScript testy",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "minify:js": "terser assets/js/*.js -o assets/js/*.min.js",
    "minify:css": "csso assets/css/styles.css -o assets/css/styles.min.css"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "csso-cli": "^4.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "terser": "^5.44.1",
    "uglify-js": "^3.19.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/tests/js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/assets/js/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.min.js"
    ],
    "coverageDirectory": "coverage/js"
  }
}
